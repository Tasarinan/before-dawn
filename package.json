{
  "name": "before-dawn",
  "productName": "Before Dawn",
  "version": "0.10.8",
  "description": "A desktop screensaver app using web technologies",
  "author": "Colin Mitchell <colin@muffinlabs.com> (http://muffinlabs.com)",
  "license": "MIT",
  "homepage": "https://github.com/muffinista/before-dawn/",
  "main": "output/main.js",
  "scripts": {
    "dev": "node bin/dev-runner.js",
    "dev-no-reload": "cross-env DISABLE_RELOAD=1 node bin/dev-runner.js",
    "compile": "cross-env NODE_ENV=production webpack --mode production --config webpack.config.js",
    "eslint-all": "eslint -c .eslintrc.js src/**/*.js src/**/*.vue test/**/*.js webpack*.js",
    "eslint": "eslint -c .eslintrc.js",
    "postinstall": "electron-builder install-app-deps",
    "pack": "yarn compile && electron-builder --dir",
    "dist": "yarn compile && electron-builder --x64",
    "test": "yarn compile && xvfb-maybe mocha -b test/**",
    "test-lib": "nyc --reporter=html mocha test test/lib/** test/main/**",
    "run-local": "yarn compile && electron output/main.js",
    "grab-screens": "bin/capture-screens.js",
    "release": "yarn dist",
    "publish-release": "node bin/generate-release.js && git push origin master && node bin/sentry-symbols.js"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/muffinista/before-dawn.git"
  },
  "dependencies": {
    "@sentry/electron": "^0.16.0",
    "auto-launch": "^5.0.5",
    "cross-env": "^5.2.0",
    "desktop-idle": "^1.1.2",
    "detect-fullscreen": "^0.0.2",
    "electron-is-dev": "^1.0.1",
    "electron-log": "^3.0.1",
    "fs-extra": "^7.0.0",
    "glob": "^7.1.2",
    "linux-battery": "^3.0.1",
    "mkdirp": "^0.5.1",
    "osx-battery": "gillstrom/osx-battery.git",
    "proper-lockfile": "^3.2.0",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.5",
    "rimraf": "^2.6.2",
    "temp": "^0.9.0",
    "yauzl": "^2.10.0"
  },
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "@babel/preset-env": "^7.3.1",
    "@octokit/rest": "^16.19.0",
    "@sentry/cli": "^1.37.4",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "bootstrap": "~> 4.3.1",
    "bootstrap-vue": "^2.0.0-rc.11",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "clean-webpack-plugin": "^2.0.0",
    "copy-webpack-plugin": "^5.0.0",
    "css-loader": "^2.1.0",
    "devtron": "^1.4.0",
    "dotenv": "^7.0.0",
    "electron": "~> 4.1.0",
    "electron-builder": "^20.39.0",
    "electron-debug": "^2.1.0",
    "electron-devtools-installer": "^2.2.4",
    "eslint": "^5.14.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^2.1.0",
    "eslint-plugin-html": "^5.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "^5.2.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^3.0.1",
    "glob-all": "^3.1.0",
    "html-webpack-plugin": "^3.2.0",
    "inject-loader": "^4.0.1",
    "jquery": "^3.3.1",
    "lodash.debounce": "^4.0.8",
    "mini-css-extract-plugin": "^0.5.0",
    "mocha": "^6.0.1",
    "nock": "^10.0.6",
    "node-loader": "^0.6.0",
    "node-sass": "^4.11.0",
    "noty": "^3.2.0-beta",
    "nyc": "^13.1.0",
    "popper.js": "^1.14.3",
    "purgecss-webpack-plugin": "^1.4.0",
    "sass-loader": "^7.1.0",
    "sinon": "^7.2.2",
    "spectron": "electron/spectron",
    "spectron-fake-dialog": "^0.0.1",
    "style-loader": "^0.23.1",
    "url-loader": "^1.1.1",
    "vue": "^2.5.22",
    "vue-electron": "^1.0.6",
    "vue-html-loader": "^1.2.4",
    "vue-loader": "^15.4.2",
    "vue-observe-visibility": "^0.4.3",
    "vue-style-loader": "^4.1.1",
    "vue-template-compiler": "^2.5.22",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.1.5",
    "webpack-hot-middleware": "^2.24.2",
    "webpack-merge": "^4.1.3",
    "webpack-node-externals": "^1.7.2",
    "xvfb-maybe": "^0.2.1"
  },
  "build": {
    "files": [
      "output/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "appId": "Before Dawn",
    "mac": {
      "category": "public.app-category.entertainment"
    },
    "nsis": {
      "installerIcon": "build/icon.ico",
      "perMachine": false
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "asar": true,
    "dmg": {
      "contents": [
        {
          "x": 338,
          "y": 14,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 192,
          "y": 14,
          "type": "file"
        }
      ]
    },
    "linux": {
      "category": "Amusement",
      "target": "deb",
      "executableName": "before-dawn",
      "maintainer": "Colin Mitchell <colin@muffinlabs.com>"
    }
  }
}
